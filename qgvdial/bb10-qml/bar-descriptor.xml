<?xml version='1.0' encoding='UTF-8' standalone='no'?>
<qnx xmlns="http://www.qnx.com/schemas/application/1.0">
    <id>com.example.qgvdial</id>
    <name>qgvdial</name>
    <versionNumber>1.0.0</versionNumber>
    <description>Google Voice client for BB10</description>
    <initialWindow>
        <autoOrients>true</autoOrients>
        <systemChrome>none</systemChrome>
        <transparent>false</transparent>
    </initialWindow>
    <author>Yuvraaj Kelkar</author>
    <copyright>LGPL v2</copyright>
    <env value="app/native/imports:/usr/lib/qt4/imports" var="QML_IMPORT_PATH"/>
    <env value="app/native/plugins:/usr/lib/qt4/plugins" var="QT_PLUGIN_PATH"/>
    <env value="app/native/lib:/usr/lib/qt4/lib/" var="LD_LIBRARY_PATH"/>
    <arg>-style</arg>
    <arg>qnxlight</arg>
    <action system="true">run_native</action>

    <!-- ColoredItems should point to the project binary, path can be relative -->
    <asset path="qgvdial" type="Qnx/Elf" entry="true">qgvdial</asset>

    <!-- Request permission to execute native code.  Required for native applications. -->
    <permission system="true">run_native</permission>
    <permission>access_internet</permission>
    <permission>access_phone</permission>
    <permission>control_phone</permission>
    <permission>run_when_backgrounded</permission>
    <permission>access_shared</permission>
    
    <asset path="../../icons/qgv.png">qgvdial.png</asset>
    <icon>
       <image>qgvdial.png</image>
    </icon>

    <asset path="qml/">qml</asset>
    <asset path="imports/">imports</asset>
    <env var="QML_IMPORT_PATH" value="app/native/imports" />
    <!-- <env var="QBB_USE_OPENGL" value="1"/> -->
</qnx>
